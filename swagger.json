  "paths": {
    "/login": {
      "post": {
        "tags": ["Login"],
        "sumary": "Authenticate the given tutor.",
        "requestBody": {
          "description": "",
          "requery": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auth"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas":{
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthResponse": {
        "type":"object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemas":{
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
